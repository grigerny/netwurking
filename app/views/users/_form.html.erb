<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this bizcard from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>



<div class="userformwrapper">

<div class="userformtitle">		
Name:
</div>
<%= f.text_field :full_name, :class => "abc", :placeholder => "First & Last" %>

<div class="userformtitle">	
<br>
Company:
</div>
<%= f.text_field :company, :class => "companyedit", :placeholder => "Co. Name" %>

<div class="userformtitle">
<br>
Twitter:
</div>	

<div class="twitteredit">
<%= best_in_place @user, :twitter%>
</div>
	
<br><br>
<div class="formbackgroundcolortitle">
Choose a Background Color	
<br>
</div>	

<div class="colorselectwrapper">
	
<div class="violetcolor">
 <%= form_for @user do |t| %>
 <%= t.hidden_field :cardbackground, :value=>"violet" %>
 <%= t.submit "Update", :class => "violetcolor" %>
<% end %>
</div>	

<div class="bluecolor">
	 <%= form_for @user do |t| %>
	 <%= t.hidden_field :cardbackground, :value=>"#4793FA" %>
	 <%= t.submit "Update", :class =>"bluecolor" %>
	<% end %>
</div>

</div>


<br><br><br><br><br>
<div class="actions">
<%= f.submit "Update", :class => "submitbutton"  %>
</div>

</div>

